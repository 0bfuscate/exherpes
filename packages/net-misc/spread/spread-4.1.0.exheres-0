src_prepare() {
    default

    # Strip strip
    edo sed -i -e 's/0755 -s/0755/g' daemon/Makefile.in examples/Makefile.in
    # ld has a hissy fit
    edo sed -i -e s:'$(LDFLAGS)':: examples/Makefile.in
}

src_install() {
    default

    newinitd ${FILES}/spread.initd spread
}


