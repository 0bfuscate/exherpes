LICENCES="Spread-1.0"
SLOT="0"
PLATFORMS="~amd64"

DEPENDENCIES="
    build+run:
        group/spread
        user/spread
"

WORK="${WORKBASE}/${MY_PNV}"

BUGS_TO="nwmcsween+exherbo@gmail.com"

DEFAULT_SRC_CONFIGURE_PARAMS=( )
DEFAULT_SRC_CONFIGURE_OPTION_WITHS=( )
